#!/usr/bin/env bash

# vsc code runner for go files and running them with cmd+r

run_co_code(){
    FILE="${1}"

    if [[ "${FILE}" =~ "_test.go" ]]; then
        cd "$(dirname "${FILE}")"

        TESTS=$(cat "${FILE}" \
            | grep --color=none  -e "^func Test" \
            | sed -n 's/func \(.*\)(.*/\1/p'| xargs | sed 's/ /|/g')

        go test -v \
                -timeout=10s \
                -count=1 \
                -race \
                -run "$TESTS"


        exit $?
    fi

    if [[ $(basename "${FILE}") == "main.go" ]]; then

        cd "$(dirname "${FILE}")"
        go run .
        exit $?
    fi

    go run "${FILE}"
    exit $?
}

run_co_code $1

